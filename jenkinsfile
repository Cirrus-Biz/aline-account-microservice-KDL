pipeline {
    environment {
        DOCKERHUB_CREDENTIALS=credentials("Dockerhub")
    }
    agent any

    tools {
        maven "MAVEN"
    }

    stages {
        stage('SonarQube Analysis') {
            steps{
                script{
                    withSonarQubeEnv(installationName: "sonarqube") {
                        bat "mvn verify test sonar:sonar -Dsonar.projectKey=aline-account-microservice"
                        }
                }

            }       
        }

        stage('Quality Gate Check'){
            steps{
                script{
                    sleep(5)
                    def qg = waitForQualityGate()
                    if (qg.status != "OK"){
                        error "Pipeline didn't meet quality gate standards"
                    }
                }
                
            }
        }

        stage("Build MVN") {
            steps {
                bat "mvn -Dmaven.test.failure.ignore=true clean package"
            }
        }

        stage("Build Docker"){
            steps{
                bat "docker build -t laxwalrus/capstone-account:$BUILD_NUMBER ."

            }            
        }


        stage("login to docker"){
            steps{
                bat "echo $DOCKERHUB_CREDENTIALS_PSW| docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin"
            }
        }

        stage("Deploy Docker"){
            steps{
                bat "docker push laxwalrus/capstone-account:$BUILD_NUMBER"
            }
        }
            


        stage("Cleaning"){
            steps{
                bat "docker logout"
            }
        }
        
        stage('Archive') {
            steps {
            archiveArtifacts artifacts: 'account-microservice/target/*.jar', followSymlinks: false
            }
        }
    }
}